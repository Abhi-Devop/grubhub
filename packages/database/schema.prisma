generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  phone     String?   @unique
  email     String?   @unique
  firstName String?
  lastName  String?
  image     String?
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  password  String?
  otp       String?
  otpExpiry DateTime? @db.Timestamptz(6)
  googleId  String?   @unique
  publicId  String    @unique @default(uuid())
  id        Int       @id @default(autoincrement())
  role      Role      @default(USER)
  addresses Address[]
  cart      Cart?
  orders    Order[]
}

model Address {
  lat       Float
  lng       Float
  street    String
  city      String
  pincode   String
  state     String?
  country   String?
  type      String?
  isDefault Boolean @default(false)
  publicId  String  @unique @default(uuid())
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Store {
  name     String
  lat      Float
  lng      Float
  address  String
  isActive Boolean        @default(true)
  publicId String         @unique @default(uuid())
  id       Int            @id @default(autoincrement())
  carts    Cart[]
  orders   Order[]
  products StoreProduct[]
}

model Category {
  name     String
  image    String
  publicId String    @unique @default(uuid())
  id       Int       @id @default(autoincrement())
  products Product[]
}

model Product {
  name          String
  description   String?
  image         String
  sku           String         @unique
  slug          String?        @unique
  rating        Float?
  numReviews    Int?
  isVeg         Boolean?       @default(true)
  publicId      String         @unique @default(uuid())
  id            Int            @id @default(autoincrement())
  categoryId    Int
  baseMrp       Int            @default(0)
  basePrice     Int            @default(0)
  orderItems    OrderItem[]
  category      Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  storeProducts StoreProduct[]
}

model StoreProduct {
  price       Int
  mrp         Int
  stock       Int        @default(0)
  isAvailable Boolean    @default(true)
  publicId    String     @unique @default(uuid())
  id          Int        @id @default(autoincrement())
  storeId     Int
  productId   Int
  cartItems   CartItem[]
  product     Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  store       Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([storeId, productId])
  @@index([storeId])
}

model Cart {
  publicId String     @unique @default(uuid())
  id       Int        @id @default(autoincrement())
  userId   Int        @unique
  storeId  Int?
  store    Store?     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items    CartItem[]
}

model CartItem {
  quantity       Int
  publicId       String       @unique @default(uuid())
  id             Int          @id @default(autoincrement())
  cartId         Int
  storeProductId Int
  cart           Cart         @relation(fields: [cartId], references: [id], onDelete: Cascade)
  storeProduct   StoreProduct @relation(fields: [storeProductId], references: [id], onDelete: Cascade)
}

model Order {
  orderId       String        @unique
  totalAmount   Int
  riderId       String?
  createdAt     DateTime      @default(now()) @db.Timestamptz(6)
  publicId      String        @unique @default(uuid())
  id            Int           @id @default(autoincrement())
  userId        Int
  storeId       Int
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod PaymentMethod @default(CARD)
  store         Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items         OrderItem[]

  @@index([userId])
  @@index([storeId])
}

model OrderItem {
  name      String
  price     Int
  quantity  Int
  publicId  String  @unique @default(uuid())
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
  RIDER
}

enum OrderStatus {
  PENDING
  PREPARING
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CARD
  UPI
  CASH
}
